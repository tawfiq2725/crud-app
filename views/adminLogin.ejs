<div class="container" style="width: 500px; position: relative; top: 100px;">
    <h1 class="text-center"><i class="fa-solid fa-user"></i> Admin Login</h1>
    <form action="/admin/login" method="POST" class="card-body">
        <legend>Login</legend>
        <hr>
        <% if (successMessage.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%- successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>
        <% if (errorMessage.length > 0) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%- errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>
        <label class="form-label" for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control">
        <label class="form-label" for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control">
        <button class="py-2 my-3 btn btn-outline-primary" type="submit">Login</button>
    </form>
</div>
