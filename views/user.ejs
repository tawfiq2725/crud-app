<div class="container" style="width: 500px; position: relative; top: 100px;">
    <h1 class="text-center"><i class="fa-solid fa-user"></i> User Login</h1>
    <form action="/login" method="POST" class="card-body">
        <legend>Login</legend>
        <hr>
        <label class="form-label" for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control">
        <label class="form-label" for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control">

        <button class="py-2 my-3 btn btn-outline-primary" type="submit">Login</button>
        <p>Don't have account <a href="/user/signup">Register Here</a></p>
    </form>
</div>
</div>